@import 'common.styl'

#component-controls
	background-color rgb(219,218,199)
    height 48px
    width 20%
    top 15px
    left 0%
    position relative
    float left

.catalogPicker
	position absolute
    width 49%
    height 49%
    padding 1%
    background-color black
    border 3px double white
    top 25%
    left 25%

.catalogPickerInfo
	font-size 200%
    float left

#searchbar
	float right
    margin-right 3%
    margin-top 0.75%
    width 38%

.catalogPickerExhibitions
	position absolute
    border-right 1px solid white
    top 13%
    padding 1%
    height 73%
    width 28%
    overflow auto

.catalogPickerExhibitions .allArtworksHolder
 	width 100%
    height 9%
    margin 1px 0px 1px 0px
    background #999
    padding-left 3%
    padding-top 3%

.catalogPickerArtworks
 	position absolute
    left 33%
    top 13%
    padding 1%
    height 73%
    width 62%
    overflow auto

#loadingLabel
	display inline-block
    position absolute
    left 3%
    bottom 2%

#loadingLabel #progressCircle
	height 12px
    width auto
    margin-left 20px
    float right

#catalogPickerImport
 	position absolute
    bottom 2%
    right 22%

#catalogPickerCancel
 	position absolute
    bottom 2%
	right 5%