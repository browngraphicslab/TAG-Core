@import 'common.styl'

#newCatalogRoot .artIcon
	float left
	width 25%
	height 100%

#newCatalogRoot .laureateText
	margin-top 0.84%
	float right
	font-size 100%
	overflow hidden
	text-align center         
	text-overflow ellipsis        
	white-space nowrap
	width 75%
	position relative
	left 5%
	color rgb(189,125,13)
	opacity .7


#newCatalogRoot .laureateInfo
	font-size .9em
	text-overflow ellipsis
	text-align left
	position relative
	width 100%
	height 30%
	color white

#newCatalogRoot .laureateTitle
	background-color rgba(0, 0, 0, 0.6)
	height 25%
	opacity 1.0
	position absolute
	width 100%
	padding-top 2%


#newCatalogRoot .laureateTile
	position absolute
	overflow hidden	


#newCatalogRoot #filterTitle
	width 15%
	text-align left
	padding-left 2%
	height 5%
	color white
	position absolute
	z-index 999999999999999999999

#newCatalogRoot #searchTitle
	width 90%
	text-align right
	height 5%
	color white
	position absolute
	z-index 999999999999999999999

#newCatalogRoot .prizeFilterButton
	position absolute
	display inline
	width 3.7%
	height 8%
	margin-top .5%
	

#newCatalogRoot .prizeFilterImage
	width 100%
	height 75%
	box-shadow 3px 8px 12px 3px #000

#newCatalogRoot .prizeFilterTitle
	width 100%
	margin-bottom 8%
	text-align center
	font-size .45em

#newCatalogRoot #topArea
	width 90%
	height 18%

#newCatalogRoot #searchArea
	float right


#newCatalogRoot .prizeFilterRow
	display inline
	margin-left 10px
	border-radius 6pt


#newCatalogRoot li.prizeKeyword
	display inline
	margin-left 8%
	border-radius 6pt

#newCatalogRoot #prizes
	display inline
	width 50%
	float left
	height 65%

#newCatalogRoot #physics
	margin-left 0%


#newCatalogRoot #chemistry
	margin-left 5%

#newCatalogRoot #medicine
	margin-left 10%

#newCatalogRoot #literature
	margin-left 15%

#newCatalogRoot #peace
	margin-left 20%

#newCatalogRoot #economics
	margin-left 25%

#newCatalogRoot .applyOrClear
	width 4%
	height 3.5%
	display inline
	text-align center
	position absolute
	margin-top 2.5%
	font-size .7em
	background-color #fea100
	margin-right 1%
	border-radius 5pt
	box-shadow 3px 8px 12px 3px #000

#newCatalogRoot #applyButton
	margin-left 30%

#newCatalogRoot #clearButton
	margin-left 35%




::-webkit-scrollbar
	width 10px
	height 10px

::-webkit-scrollbar:horizontal
	width 15px
	height 15px

::-webkit-scrollbar-track 
	-webkit-box-shadow inset 0 0 6px rgba(200,200,200,0.5)
	border-radius 10px

::-webkit-scrollbar-thumb
	border-radius 10px
	-webkit-box-shadow inset 0 0 6px rgba(200,200,200,1)
	background-color rgba(0, 0, 0, 0.5)
