@import 'common.styl'

body {
}

#ITEHolder {
    height: 100%;
    width: 100%;
    position: absolute;
    background-color: black;
    top: 0;
    left: 0;
}

.assetImage {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: inherit;
}


.assetVideo {
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: inherit;
}


#bottomContainer {
    height: 12.5%;
    width: 100%;
    bottom: 0%; 
    position: absolute;
    z-index: 1000;
}

#buttonContainer {
    height: 57%;
    width: 100%;
    top: 0%;
    position: absolute;
}

.fullScreenButtonContainer {
    width: auto;
    height: 100%;
    position: absolute;
    right: 6%
}

.fullScreenButton {
    width: 100%;
    height: 100%;
    opacity: .5;
}

.loopButtonContainer {
    width: auto;
    height: 100%;
    position: absolute;
    right: 1%
}

.loopButton {
    width: 100%;
    height: 100%;
    opacity: .5;
}

.playPauseButtonContainer {
    width: auto;
    height: 100%;
    position: absolute;
    left: 1%;
}

.playPauseButton {
    width: 100%;
    height: 100%;
}

.progressBarContainer {
    width: 100%;
    height:25%;
    position: absolute;
    bottom: 0%;
}

.progressBar {
    width: 100%;
    height: 100%;
    background-color: #33CCFF;
}

.progressIndicatorContainer {
    width: auto;
    position: absolute;
    right: 18%;
    top: 17.5%;
}

.progressIndicator {
    width: 100%;
    height: 50%;
    font-size: 1.05em;
    color: white;
    font-family: "Segoe UI", serif;
}

.UIControl {
    position: absolute;
    z-index: 10;
    opacity: 0;
}

.volumeContainer {
    position: absolute;
    right: 11%;
    width: 37px;
    height: 400%;
    bottom: 0;
}

.volumeButtonContainer {
    width: auto;
    height: 25%;
    position: absolute;
    bottom: 0;
}

.volumeButton {
    width: 100%;
    height: 100%;
}

.volumeLevelContainer {
    width: 100%;
    height: 70%;
    position: absolute;
    top: 0%
}

.volumeLevel {
    position: absolute;
    left: 25%;
    bottom: 0;
    width: 50%;
    height: 100%;
    background-color: #33CCFF;
}