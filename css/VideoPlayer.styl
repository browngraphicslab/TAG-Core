@import 'common.styl'

TOPBAR_HEIGHT = 8%
SEEKBAR_TOP=44%
subtract(a,b)
	a - b

divide(a,b)
	a / b
#VideoPlayerRoot
	wh 100%
	overflow-x hidden	

#VideoPlayerRoot #backButton
	cursor pointer
	width 60%
	height auto

#VideoPlayerRoot #backButtonContainer
	position absolute
	width 5%
	top 20%
	left 1%
	z-index 10

#VideoPlayerRoot #bottomBar
	background: -moz-linear-gradient(top,  rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0)), color-stop(100%,rgba(0,0,0,1))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); /* Opera 11.050+ */
	background: -ms-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); /* IE10+ */
	background: linear-gradient(to bottom,  rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); /* W3C */
	height 13%
	width 100%
	bottom 0%
	position absolute

#VideoPlayerRoot #currentTimeDisplay
	width 5%
	height 80%
	display inline-block
	color white
	position absolute
	top 25%
	right 7%

#VideoPlayerRoot #linkButton
	cursor pointer
	width 60%
	height auto

#VideoPlayerRoot #linkContainer
	position absolute
	width 5%
	top 20%
	left 5%
	z-index 10
	
#VideoPlayerRoot #overlayOnRoot
	position absolute
	left 0px
	top 0px
	background-color rgba(255,0,0,1)
	width 100%
	height auto

#VideoPlayerRoot #playHolder
	position absolute
	height 70%
	width 10%
	display inline-block
	margin 0 1%
	top 4%
	margin-left 1%

#VideoPlayerRoot #playPauseButton
	position absolute
	top 5%
	height 80%
	width auto
	padding-left 2%
	display inline-block

#VideoPlayerRoot #seek-bar
	padding 1%
	width 40%
	height 10%
	margin-top 1%
	margin-left 1%
	display inline-block


#VideoPlayerRoot #sliderContainer
	display inline-block
	height 15%                             
	position absolute
	width 100%                        
	left 0px
	bottom 0px

#VideoPlayerRoot #sliderPoint
	display inline-block
	height 100%
	left 0%
	position absolute
	top 0%
	width 0%
	background-color #33CCFF

#VideoPlayerRoot #timeContainer
	height 20px
	width 40px
	margin 0px 1% 0px 1%
	padding 0
	display inline-block
	overflow hidden
	

#VideoPlayerRoot #topBar
	background: -moz-linear-gradient(bottom,  rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left bottom, left top, color-stop(0%,rgba(0,0,0,0)), color-stop(100%,rgba(0,0,0,1))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(bottom,  rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(bottom,  rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); /* Opera 11.050+ */
	background: -ms-linear-gradient(bottom,  rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); /* IE10+ */
	background: linear-gradient(to top,  rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%); /* W3C */
	position absolute
	width 100%
	height 12%
	z-index 2
	display inline

#VideoPlayerRoot #videoContainer
	background-color black
	position absolute
	width 100%
	height auto
	text-align center
	z-index 0

#VideoPlayerRoot #video
	position relative
	width 100%
	max-width 100%
	max-height 100%

#VideoPlayerRoot #videoControlsButton
	position absolute
	top 5%
	right 0
	height 80%
	width auto
	display inline-block


#VideoPlayerRoot #volHolder
	position absolute
	height 70%
	width 10%
	display inline-block
	margin 0 1%
	top 4%
	right 1%
	margin-left 1%





