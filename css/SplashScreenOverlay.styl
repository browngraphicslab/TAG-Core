@import 'common.styl'

infoBgColor = rgba(0,0,0,1)

#splashScreenRoot
    position absolute
    wh 100%

#splashScreenRoot #innerContainer
    background-position center
    background-size cover
    position absolute
    wh 100%
    opacity 0.9

#splashScreenRoot #title
    position absolute
    left 15.5%
    top 11%

#splashScreenRoot #description
    position absolute
    left 14.5%
    top 25%

#splashScreenRoot #serverInput
    position relative
    left 17.2%
    width 23.5%
    background-color transparent
    border-radius 3.5px
    font-size 100%
    color #fff
    border 1px solid white
    padding-left 0.5%
    height 45%

#splashScreenRoot #serverSubmit
    position relative
    left -6.4%
    width 6.5%
    border 1px solid white
    color #fff
    display inline-block
    padding-left 1%
    font-family "Segoe UI",serif
    font-size 100%
    background-color transparent
    cursor pointer
    border-radius 3.5px
    height 45%


#splashScreenRoot #passwordInput
    position relative
    left 28.2%
    width 23.5%
    background-color transparent
    border 1px solid white
    border-radius 3.5px
    color #fff
    font-size 100%
    padding-left 0.5%
    height 45%

#splashScreenRoot #passwordSubmit
    position relative
    left 20.7%
    width 6.5%
    border 1px solid white
    color white
    display inline-block
    padding-left 1%
    font-family "Segoe UI",serif
    font-size 100%
    background-color transparent
    cursor pointer
    border-radius 3.5px
    height 45%
    

#splashScreenRoot #serverError
    position relative
    left 16.5%
    color rgb(132,133,136)
    font-family "Segoe UI",serif
    font-size 74%
    font-style normal
    font-weight normal
    text-decoration none
    visibility hidden
    top 13%

#splashScreenRoot #passwordError
    position relative
    left 52.5%
    color rgb(132,133,136)
    font-family "Segoe UI",serif
    font-size 74%
    font-style normal
    font-weight normal
    text-decoration none
    visibility hidden
    top -15%

#splashScreenRoot #inputRow
    position absolute
    width 100%
    top 43%
    height 10%

#splashScreenRoot #goToCollectionsButton
    position absolute
    left 40.5%
    width 17%
    height 5%
    padding-left 3%
    padding-top 0.4%
    background-color white
    font-weight bold
    font-family "Segoe UI",serif
    color black
    cursor pointer
    border-radius 3.5px
    font-size 100%
    top 75%

#splashScreenRoot #msLogo
    height 84%
    left 4.5%
    position relative

#splashScreenRoot #brownLogo
    height 84%
    left 5%
    position relative

#splashScreenRoot #logoRow
    position absolute
    top 86%
    left 70%
    height 14%
    width 100%

#splashScreenRoot span
    &.titleone
        font-family "Segoe UI Bold",serif
        font-size 300%
        font-style normal
        font-weight bold
        text-decoration none
    &.titletwo
        font-family "Segoe UI",serif
        font-size 200%
        font-style normal
        font-weight normal
        text-decoration none
    &.bodyDescone
        font-family "Segoe UI",serif
        font-size 133%
        font-style normal
        font-weight normal
        position relative
        text-decoration none
        line-height 120%
    &.bodyDesctwo
        font-family "Segoe UI",serif
        font-size 133%
        font-style normal
        font-weight normal
        position absolute
        bottom -380%
        text-decoration none
        line-height 120%
        left 2.25%
    &.submit
        color rgb(255,255,255)
        font-family "Segoe UI",serif
        font-size 90%
        font-style normal
        font-weight normal
        text-decoration none
    &.placeHolder
        color rgb(132,133,136)
        font-family "Segoe UI",serif
        font-size 90%
        font-style normal
        font-weight normal
        text-decoration none
    &.error
        color rgb(132,133,136)
        font-family "Segoe UI",serif
