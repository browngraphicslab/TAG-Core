@import 'common.styl'

infoBgColor = rgba(0,0,0,1)

#splashScreenRoot
    position absolute
    wh 100%

#splashScreenRoot #innerContainer
    background-position center
    background-size cover
    position absolute
    wh 100%

#splashScreenRoot #title
    position relative
    left 16%
    top 11%

#splashScreenRoot #description
    position relative
    left 14.5%
    top 12%

#splashScreenRoot #serverInput
    position relative
    left 18.7%
    width 22.5%
    background-color transparent
    border 1px solid white
    border-radius 3.5px
    color white

#splashScreenRoot #serverSubmit
    position relative
    left -3%
    border 1px solid white
    color white
    width auto
    margin-top 1%
    display inline-block
    padding-left 1%
    padding-right 1%
    font-family "Segoe UI",serif
    font-size 90%
    background-color transparent
    cursor pointer
    border-radius 3.5px

#splashScreenRoot #passwordInput
    position relative
    left 30.5%
    width 22.5%
    background-color transparent
    border 1px solid white
    border-radius 3.5px
    color white

#splashScreenRoot #passwordSubmit
    position relative
    left 24.5%
    border 1px solid white
    color white
    width auto
    margin-top 1%
    display inline-block
    padding-left 1%
    padding-right 1%
    font-family "Segoe UI",serif
    font-size 90%
    background-color transparent
    cursor pointer
    border-radius 3.5px

#splashScreenRoot #serverError
    position relative
    left 18.2%
    color rgb(132,133,136)
    font-family "Segoe UI",serif
    font-size 74%
    font-style normal
    font-weight normal
    text-decoration none
    visibility hidden

#splashScreenRoot #passwordError
    position absolute
    left 53.5%
    color rgb(132,133,136)
    font-family "Segoe UI",serif
    font-size 74%
    font-style normal
    font-weight normal
    text-decoration none
    visibility hidden
    bottom 0.5%

#splashScreenRoot #inputRow
    position relative
    left 1%
    top 16.2%

#splashScreenRoot #goToCollectionsButton
    position relative
    top 34.5%
    left 40.5%
    width 13.5%
    height 5%
    padding-left 2%
    padding-right 2%
    padding-top 0.4%
    background-color white
    font-weight bold
    font-family "Segoe UI",serif
    color black
    cursor pointer
    border-radius 3.5px
    font-size 100%

#splashScreenRoot #msLogo
    height 100%
    left 79%
    position absolute

#splashScreenRoot #brownLogo
    height 55px
    left 98.2%
    position relative

#splashScreenRoot #logoRow
    position relative
    top 50%
    left -4.5%

#splashScreenRoot span
    &.titleone
        color rgb(255,255,255)
        font-family "Segoe UI Bold",serif
        font-size 300%
        font-style normal
        font-weight bold
        text-decoration none
    &.titletwo
        color rgb(255,255,255)
        font-family "Segoe UI",serif
        font-size 200%
        font-style normal
        font-weight normal
        text-decoration none
    &.bodyDescone
        color rgb(255,255,255)
        font-family "Segoe UI",serif
        font-size 133%
        font-style normal
        font-weight normal
        position relative
        text-decoration none
        line-height 120%
    &.bodyDesctwo
        color rgb(255,255,255)
        font-family "Segoe UI",serif
        font-size 133%
        font-style normal
        font-weight normal
        position absolute
        bottom -280%
        text-decoration none
        line-height 120%
        left 2.25%
    &.submit
        color rgb(255,255,255)
        font-family "Segoe UI",serif
        font-size 90%
        font-style normal
        font-weight normal
        text-decoration none
    &.placeHolder
        color rgb(132,133,136)
        font-family "Segoe UI",serif
        font-size 90%
        font-style normal
        font-weight normal
        text-decoration none
    &.error
        color rgb(132,133,136)
        font-family "Segoe UI",serif
        font-size 74%
        font-style normal
        font-weight normal
        text-decoration none



