@import 'common.styl'

infoBgColor = rgba(0,0,0,1)

#splashScreenRoot
    position absolute
    wh 100%

#splashScreenRoot #overlay
    position absolute
    wh 100%
    background-color rgba(0,0,0,.70)

#splashScreenRoot #innerContainer
    background-position center
    background-size cover
    position absolute
    wh 100%
    opacity 0.9
    text-align center

#splashScreenRoot #title
    position relative
    margin 0 auto
    top 6%
    display block

#splashScreenRoot .description
    position relative
    display block

#splashScreenRoot #topDesc
    top 8%

#splashScreenRoot #bottomDesc
    top 33%

#splashScreenRoot #buttonDiv
    top 62%
    width 100%
    height 70%
    position absolute
    display block

#splashScreenRoot #serverInput
    position absolute
    display inline-block
    width 70%
    height 100%
    background-color transparent
    font-size 75%
    color #fff
    padding 0% 0% 0% 5px
    border-radius 3.5px
    border 1px solid white
    margin 0
    vertical-align middle

#splashScreenRoot #serverSubmit
    position absolute
    display inline-block
    right 0%
    width 20%
    height 100%
    text-align center 
    vertical-align middle
    color #fff
    font-family "Segoe UI",serif
    font-size 75%
    font-weight normal
    background-color transparent
    cursor pointer
    padding 0px 0px 0px 0px
    border-radius 3.5px
    border 1px solid white
    margin 0
    margin-left 5%
    margin-top 1px

#splashScreenRoot #passwordInput
    position absolute
    display inline-block
    width 70%
    height 100%
    background-color transparent
    font-size 75%
    color #fff
    padding 0% 0% 0% 5px
    border-radius 3.5px
    border 1px solid white
    margin 0
    vertical-align middle

#splashScreenRoot #passwordSubmit
    position absolute
    display inline-block
    right 0%
    width 20%
    height 100%
    text-align center 
    vertical-align middle
    color #fff
    font-family "Segoe UI",serif
    font-size 75%
    font-weight normal
    background-color transparent
    cursor pointer
    padding 0px 0px 0px 0px
    border-radius 3.5px
    border 1px solid white
    margin 0
    margin-left 5%
    margin-top 1px

#splashScreenRoot #serverError
    position absolute
    display block
    color rgb(132,133,136)
    font-family "Segoe UI",serif
    font-size 90%
    font-style italic
    font-weight normal
    text-decoration none
    visibility hidden
    margin-top 10%
    
#splashScreenRoot #passwordError
    position absolute
    display block
    color rgb(132,133,136)
    font-family "Segoe UI",serif
    font-size 90%
    font-style italic
    font-weight normal
    text-decoration none
    visibility hidden
    margin-top 10%

#splashScreenRoot #serverInputDiv
    width 32%
    text-align left
    display inline-block
    vertical-align top
    white-space normal
    height 100%
    position relative
    border 0
    margin 0
    padding 0

#splashScreenRoot #passwordInputDiv
    width 32%
    text-align left
    display inline-block
    vertical-align top
    white-space normal
    height 100%
    position relative
    border 0
    margin 0
    padding 0
    margin-left 10%

#splashScreenRoot #inputRow
    position relative
    display none
    width 100%
    top 33%
    height 4%

#splashScreenRoot #introDiv
    position relative
    top 12%
    height 70%

#splashScreenRoot #goToIntroWrapper
    float none
    margin 0 auto

#splashScreenRoot .goToCollectionsButton
    position relative
    //left 40.5%
    width 65%
    margin 10px auto 0px auto
    //height 8%
    padding-top 0.4%
    padding-bottom 0.4%
    background-color rgb(254,161,0);
    font-weight normal
    font-family sourceSans
    color black
    cursor pointer
    border-radius 3.5px
    font-size 90%
    //margin-top 10%
    //bottom 15%
    display block



#splashScreenRoot .goToWrapper
    position relative
    width 25%
    height 100%
    float left

#splashScreenRoot .goToImage
    width 50%
    border-radius 50%
    height 30%
    left 25%
    position relative
    overflow hidden
    box-shadow 3px 5px 5px #000000

#splashScreenRoot #msLogo
    height 84%
    left -34%
    position relative

#splashScreenRoot #brownLogo
    height 84%
    left -34%
    position relative

#splashScreenRoot #logoRow
    position absolute
    top 86%
    left 70%
    height 14%
    width 100%

#splashScreenRoot span
    &.titleone
        font-family Cinzel
        font-size 300%
        font-style normal
        text-decoration none
    &.titletwo
        font-family "Segoe UI",serif
        font-size 200%
        font-style normal
        font-weight normal
        text-decoration none
    &.bodyDescone
        font-family sourceSans
        font-size 100%
        font-style normal
        font-weight normal
        position relative
        text-decoration none
        line-height 120%
        display block
    &.bodyDesctwo
        font-family "Segoe UI",serif
        font-size 133%
        font-style normal
        font-weight normal
        position relative
        text-decoration none
        line-height 120%
        display block
        //margin-top 15%
        padding-top 3%
    &.submit
        color rgb(255,255,255)
        font-family "Segoe UI",serif
        font-size 90%
        font-style normal
        font-weight normal
        text-decoration none
    &.placeHolder
        color rgb(132,133,136)
        font-family "Segoe UI",serif
        font-size 90%
        font-style normal
        font-weight normal
        text-decoration none
    &.error
        color rgb(132,133,136)
        font-family "Segoe UI",serif
        font-size 74%
        font-style normal
        font-weight normal
        text-decoration none

