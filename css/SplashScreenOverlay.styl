@import 'common.styl'

infoBgColor = rgba(0,0,0,1)

#splashScreenRoot
    position absolute
    wh 100%

#splashScreenRoot #overlay
    position absolute
    wh 100%
    background-color rgba(0,0,0,.60)

#splashScreenRoot #innerContainer
    background-position center
    background-size cover
    position absolute
    wh 100%
    opacity 0.9
    text-align center

#splashScreenRoot #title
    position relative
    margin 0 auto
    top 11%
    display block

#splashScreenRoot #description
    position relative
    top 13%

#splashScreenRoot #serverInput
    position absolute
    width 22%
    background-color transparent
    border-radius 3.5px
    font-size 100%
    color #fff
    border 1px solid white
    padding-left 0.5%
    height 100%
    display block
    padding 0% 0% 0% 5px
    margin-left -10%

#splashScreenRoot #serverSubmit
    position absolute
    width 6.5%
    border 1px solid white
    color #fff
    display inline-block
    font-family "Segoe UI",serif
    font-size 100%
    background-color transparent
    cursor pointer
    border-radius 3.5px
    height 100%
    margin-right 5%
    margin-left 14%
    padding-left 5px

#splashScreenRoot #passwordInput
    position absolute
    width 22%
    background-color transparent
    border 1px solid white
    border-radius 3.5px
    color #fff
    font-size 100%
    height 100%
    display block
    margin-top 0%
    margin-bottom 0%
    padding 0% 0% 0% 5px
    margin-left 4%

#splashScreenRoot #passwordSubmit
    position absolute
    width 6.5%
    border 1px solid white
    color white
    display inline-block
    font-family "Segoe UI",serif
    font-size 100%
    background-color transparent
    cursor pointer
    border-radius 3.5px
    height 100%
    margin-left 28%
    padding-left 5px

#splashScreenRoot #serverError
    position absolute
    margin-left -11%
    color rgb(132,133,136)
    font-family "Segoe UI",serif
    font-size 90%
    font-style italic
    font-weight normal
    text-decoration none
    visibility hidden
    margin-top 2.5%
    display block

#splashScreenRoot #passwordError
    position absolute
    margin-left 3%
    color rgb(132,133,136)
    font-family "Segoe UI",serif
    font-size 90%
    font-style italic
    font-weight normal
    text-decoration none
    visibility hidden
    margin-top 2.5%
    display block

#splashScreenRoot #serverInputDiv
    width 25%
    text-align left
    display inline-block
    vertical-align top
    white-space normal
    //text-overflow ellipsis

#splashScreenRoot #passwordInputDiv
    width 25%
    text-align left
    display inline-block
    vertical-align top
    white-space normal
    //text-overflow ellipsis

#splashScreenRoot #inputRow
    position relative
    display block
    width 100%
    vertical-align top
    margin-top -9%

#splashScreenRoot #goToCollectionsButton
    position absolute
    left 40.5%
    width 17%
    //height 5%
    padding-top 0.4%
    padding-bottom 0.4%
    background-color white
    font-weight normal
    font-family "Segoe UI",serif
    color black
    cursor pointer
    border-radius 3.5px
    font-size 100%
    //margin-top 10%
    bottom 15%
    display block

#splashScreenRoot #msLogo
    height 84%
    left -34%
    position relative

#splashScreenRoot #brownLogo
    height 84%
    left -34%
    position relative

#splashScreenRoot #logoRow
    position absolute
    top 86%
    left 70%
    height 14%
    width 100%

#splashScreenRoot span
    &.titleone
        font-family "Segoe UI Bold",serif
        font-size 300%
        font-style normal
        font-weight bold
        text-decoration none
    &.titletwo
        font-family "Segoe UI",serif
        font-size 200%
        font-style normal
        font-weight normal
        text-decoration none
    &.bodyDescone
        font-family "Segoe UI",serif
        font-size 133%
        font-style normal
        font-weight normal
        position relative
        text-decoration none
        line-height 120%
        display block
    &.bodyDesctwo
        font-family "Segoe UI",serif
        font-size 133%
        font-style normal
        font-weight normal
        position relative
        text-decoration none
        line-height 120%
        display block
        margin-top 15%
        padding-top 3%
    &.submit
        color rgb(255,255,255)
        font-family "Segoe UI",serif
        font-size 90%
        font-style normal
        font-weight normal
        text-decoration none
    &.placeHolder
        color rgb(132,133,136)
        font-family "Segoe UI",serif
        font-size 90%
        font-style normal
        font-weight normal
        text-decoration none
    &.error
        color rgb(132,133,136)
        font-family "Segoe UI",serif
        font-size 74%
        font-style normal
        font-weight normal
        text-decoration none

